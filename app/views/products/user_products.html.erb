    </div>
    <%- if @products.present? %>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xl-4 col-md-5 col-12">
            <div class="shadow border-0 card fixed-height">
              <%= image_tag load_image(product.images.first.try(:image)), alt: "Card image cap", class: "card-img-top" %>

              <div class="card-body">
                <h3 class="card-title mb-2"><%= product.name %></h3>
                <p class="card-text text-muted"><%= product.description %></p>
                <hr>
              </div>
              <div class="card-mt-footer">
                <p class="mb-0 pt-0 pb-0 pr-4 pl-4">
                <ul class="card-lists">
                  <li>  
                    <span><strong>Price</strong><%= product.price %> GOOD</span>
                  </li>
                  <% if false %>
                    <li>  
                      <span><strong>Vote</strong><i class="fa fa-thumbs-o-up"></i><%= product.votes.count %> - Votes</span>
                    </li>
                  <% end %>
                </ul>
                </p>  
              </div>
              <div class="gx-card-footer pr-4 pl-4 pb-3">
                <%= link_to 'Modifiy', edit_product_path(product), class: "btn btn-outline-primary" %>
                <a class="btn btn-outline-danger product-delete-alert" href="javascript:void(0)" data-product-id="<%=product.id%>">
                  Delete
                </a>
                <%= link_to 'View', product_path(product), class: "btn btn-outline-success" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="row justify-content-center">
        <div class="col-6">
          <div class="card">
            <div class="card-body text-center">
              <p class="not-found">No Products Found</p>
              <%#= link_to 'Reset Search Results', products_path, class: "btn btn-outline-info reset-btn" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <nav aria-label="navigation">
      <ul class="pagination">        
        <li class="digg_pagination"><%= will_paginate @products %></li>        
      </ul>
    </nav>
