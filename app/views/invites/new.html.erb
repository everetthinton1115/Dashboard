<div class="container">
  <div class="col-md-5 offset-md-3">
    <div class="form-area">
      <%= form_for @invite do |f| %>
        <br style="clear:both">
        <h3 style="margin-bottom: 25px; text-align: center;"> Invitation Send Form</h3>
        <div class="form-group">
          <%= f.text_field :sender_email, readonly: true,:class=>"form-control" ,value:current_user.email if current_user  %>
        </div>
        <div class="form-group">
          <%= f.text_field :receiver_email,:class=>"form-control",:placeholder=> "Receiver Email", :required => "true" %>
        </div>
        <div class="form-group">
          <%#= f.text_field :subject,:class=>"form-control",:placeholder=> "Subject", :required => "true" %>
        </div>
        <div class="form-group">
          <%#= f.text_area :body,:class=>"form-control",:placeholder=> "Message", :required => "true",:maxlength=>"140" ,:row=> "7" %>
        </div>
        <%=f.submit "Submit Form", :class=> "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>
