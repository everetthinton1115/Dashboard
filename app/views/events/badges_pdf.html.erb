<table style="margin: auto">
  <tr>
<% event.attendees.each_with_index do |attendee, index| %>
      <td>
        <div style="width: 300px; height: 225px; border: 1px solid black; text-align:center; margin: 5px; padding:10px;">
          <div style="width: 100%">
              <!-- image_tag('blue-logo.png', style: "padding-top: 20px; width: 250px;") -->
            <%= image_tag("file://#{Rails.root}/public/blue-logo.png", style: "padding-top: 20px; width: 250px") %>
          </div>
          <div style="width: 100%">
            <div style="padding-top: 30px;font-size: 30px;word-wrap: break-word;">
              <%= attendee.name.present? ? attendee.name : attendee.email %>
            </div>
          </div>
        </div>
      </td>
    </div>
    <% if index.odd? %>
      </tr>
      <tr>
    <% end %>
<% end %>
</table>
