<div id="attendeeModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Attend <%= @event.name %></h4>
      </div>
      <%= form_for attendee, html: {class: 'f1'} do |f| %>
        <div class="modal-body">
          <div class="col-xs-12">
            <fieldset>
              <%= f.hidden_field :event_id %>
              <% if current_user %>
                <%= f.hidden_field :user_id %>
                <div class="form-group form-md-line-input form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                  <div class="input-icon right">
                    <%= f.text_field :name, class: 'form-control', value: current_user.name, disabled: true %>
                    <%= f.label :name %>
                    <span class="help-block">Your name. ex: John Smith</span>
                    <i class="fa fa-user"></i>
                  </div>
                </div>
                <div class="form-group form-md-line-input form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                  <div class="input-icon right">
                    <%= f.text_field :email, class: 'form-control', value: current_user.email, disabled: true%>
                    <%= f.label :email %>
                    <span class="help-block">Your email</span>
                    <i class="fa fa-email"></i>
                  </div>
                </div>
              <% else %>
                <div class="form-group form-md-line-input form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                  <div class="input-icon right">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control', required: true %>
                    <span class="help-block">Your name. ex: John Smith</span>
                    <i class="fa fa-user"></i>
                  </div>
                </div>
                <div class="form-group form-md-line-input form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                  <div class="input-icon right">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: 'form-control', required: true, email: true %>
                    <span class="help-block">Your email</span>
                    <i class="fa fa-email"></i>
                  </div>
                </div>
              <% end %>
              <div class="form-group form-md-line-input" style="padding-bottom: 0px; margin-bottom:0; padding-top: 32px;">
                <%= f.collection_select :attendance_level_id, attendee.event.try(:attendance_levels), :id, :name, {prompt: false, include_blank: false}, class: 'form-control select2' %>
                <%= f.label 'Attendance Type', for: :attendence_level_id %>
              </div>
            </fieldset>
          </div>
        </div>
        <div class="modal-footer" style="border:none; padding-top:0;">
          <div class="col-xs-6">
            <button type="button" class="btn btn-light" style="width:100%; margin-bottom:0;" data-dismiss="modal">Cancel</button>
          </div>
          <div class="col-xs-6">
            <%= f.submit 'Confirm', as: :button, class: 'btn btn-dark', style: 'width:100%' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
