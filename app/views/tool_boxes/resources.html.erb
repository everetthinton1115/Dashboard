<article class="tool-box" id="tool-box">
  <div class="container">
    <h2>Resources</h2>
    <h3 style="padding-bottom:30px">Links to articles and news updated by SC-C3 web admins</h3>

    <div class="row">
      <hr>
      <h3 style="font-size: 36px; color: #74797c;">Blog</h3>
    </div>

    <div class="row">
      <div class="col-sm-12" style="text-align: center;">
        <%= link_to 'View Blog', 'http://blog.sc-c3.org', target: :_blank, class: "btn btn-dark" %>
      </div>
    </div>

    <div class="row">
      <hr>
      <h3 style="font-size: 36px; color: #74797c;">Faith</h3>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%- if @faith_resources.present? %>
          <% @faith_resources.each do |resource| %>
          <div class="col-md-4 col-sm-12" style="padding:10px;">
            <div class="col-xs-12 resource", style="text-decoration: none; padding: 10px">
              <div class="col-xs-6" style="padding:0">
                <%- if resource.image?%>
                  <%= image_tag resource.image.url, class:"landing-page-campaign-image", style:"object-fit:contain" %>
                <% else %>
                  <img src="//placehold.it/400x300" class="landing-page-campaign-image" style="object-fit:contain">
                <% end %>
              </div>
              <div class="col-xs-6" style="word-wrap: break-word; padding-right:0">
                  <h4 style="padding-top:15px; font-size:16px"><%= resource.title %></h4>
                  <div style="text-align:center">
                    <a href="<%= resource.link %>" class="btn btn-dark" style="font-size:14px; margin:10px; padding:10px; text-decoration: none;">Follow Link</a>
                  </div>
              </div>
          </div>
        </div>
        <% end %>
      <% else %>
          <div class="col-xs-8 col-xs-offset-2 text-center" style="background: white; padding: 20px; margin-top:5vh; border-radius:5px">
            <h3 style="font-family: 'Lato'; font-weight:300; text-transform:uppercase; margin-top: 20px; text-align:center">No Resources Found</h3>
            <%= link_to 'Refresh Search Results', tool_box_resources_url, class: "btn btn-dark" %>
          </div>
      <% end %>
    </div>
  </div>

    <div class="row">
      <hr>
      <h3 style="font-size: 36px; color: #74797c;">Community</h3>
    </div>

    <div class="col-sm-12">
      <div class="row">
        <%- if @community_resources.present? %>
          <% @community_resources.each do |resource| %>
            <div class="col-md-4 col-sm-12" style="padding:10px;">
              <div class="col-xs-12 resource", style="text-decoration: none; padding: 10px">
                <div class="col-xs-6" style="padding:0">
                  <%- if resource.image?%>
                    <%= image_tag resource.image.url, class:"landing-page-campaign-image", style:"object-fit:contain"%>
                  <% else %>
                    <img src="//placehold.it/400x300" class="landing-page-campaign-image" style="object-fit:contain">
                  <% end %>
                </div>
                <div class="col-xs-6" style="word-wrap: break-word; padding-right:0">
                    <h4 style="padding-top:15px; font-size:16px"><%= resource.title %></h4>
                    <div style="text-align:center">
                      <a href="<%= resource.link %>" class="btn btn-dark" style="font-size:14px; margin:10px; padding:10px; text-decoration: none;">Follow Link</a>
                    </div>
                </div>
            </div>
          </div>
          <% end %>
        <% else %>
            <div class="col-xs-8 col-xs-offset-2 text-center" style="background: white; padding: 20px; margin-top:5vh; border-radius:5px">
              <h3 style="font-family: 'Lato'; font-weight:300; text-transform:uppercase; margin-top: 20px; text-align:center">No Resources Found</h3>
              <%= link_to 'Refresh Search Results', tool_box_resources_url, class: "btn btn-dark" %>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</article>
