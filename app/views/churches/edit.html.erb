<div class="top-content">
  <div class="container" style="background: #a3cbdb; width:100%; min-height:100vh; padding-top:100px;">
    <p style="margin-top:0; margin-bottom:0; font-family: 'Lato'; font-size: 50px; font-weight: 300 !important; text-align:center; text-transform: uppercase; font-weight:500">Church</p>
    <p style="margin-top:0; text-align:center; font-variant: small-caps; font-weight:300; font-size: 20px">edit account</p>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box" style="padding-bottom: 50px">
        	<%= form_for(@church,  html: { class: 'f1'}) do |f| %>
        		<div class="f1-steps">
        			<div class="f1-progress">
        			    <div class="f1-progress-line" data-now-value="12" data-number-of-steps="1" style="width: 100%;"></div>
        			</div>
        			<div class="f1-step active" style="width:100%">
        				<div class="f1-step-icon"><i class="fa fa-user"></i></div>
        			</div>
        		</div>
            <h4 style="color: #26344b; margin-bottom:0; font-family:'Lato'; text-transform:uppercase; text-align:center; font-weight:300;">Basic Info</h4>
            <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
              <div class="input-icon right">
                  <%= f.text_field :name, class: "form-control" %>
                  <%= f.label :name %>
                  <i class="fa fa-user"></i>
              </div>
            </div>
            <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
              <div class="input-icon right">
                  <%= f.email_field :contact_email, class: "form-control" %>
                  <%= f.label :contact_email %>
                  <i class="fa fa-envelope-o"></i>
              </div>
            </div>
            <div class="form-group form-md-line-input form-md-floating-label" style="margin-top:15px;">
                <%= f.text_area :description, class: 'form-control', rows: 3 %>
                <%= f.label :description %>
            </div>

            <div class="row">
              <div class="form-group ">
                <div class="col-xs-12 col-md-8 col-md-offset-2" style="text-align:center">
                  <h4 style="color:#555">Logo Image Upload</h4>
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                            <img src="<%= @church.logo? ? @church.logo.url : 'http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image' %>" alt="" />
                        </div>
                        <div>
                          <span class="btn red btn-outline btn-file">
                              <span class="fileinput-new"> Select image </span>
                              <span class="fileinput-exists"> Change </span>
                              <%= f.file_field :logo %>
                            </span>
                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
              <hr />
              <h4 style="color: #26344b; margin-bottom:0; font-family:'Lato'; text-transform:uppercase; text-align:center; font-weight:300;">Associations</h4>

              <div class="form-group form-md-line-input" style="padding-bottom: 0px; margin-bottom:0; padding-top: 32px;">
                <%= f.label :region_id %>
                <%= f.collection_select :region_id, Region.order(:name), :id, :name, {prompt: true}, {class: 'select-church-category', style: 'margin-top: 10px;'} %>
              </div>

              <div class="form-group form-md-line-input" style="padding-bottom: 0px; margin-bottom:0; padding-top: 32px;">
                <%= f.label :church_category_id %>
                <%= f.collection_select :church_category_id, ChurchCategory.order(:name), :id, :name, {prompt: true}, {class: 'select-church-category', style: 'margin-top: 10px;'} %>
              </div>

              <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                <div class="input-icon right">
                    <%= f.url_field :website_url, class: "form-control" %>
                    <%= f.label :website_url %>
                    <i class="fa fa-globe"></i>
                </div>
              </div>

              <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                <div class="input-icon right">
                    <%= f.url_field :facebook_url, class: "form-control" %>
                    <%= f.label :facebook_url %>
                    <i class="fa fa-facebook"></i>
                </div>
              </div>

              <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                <div class="input-icon right">
                    <%= f.url_field :twitter_url, class: "form-control" %>
                    <%= f.label :twitter_url %>
                    <i class="fa fa-twitter"></i>
                </div>
              </div>
              <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 35px;">
                <div class="input-icon right">
                    <%= f.url_field :gplus_url, class: "form-control" %>
                    <%= f.label :google_plus_url %>
                    <i class="fa fa-google-plus"></i>
                </div>
              </div>
              <div class="row" style="padding-right:0">
                <%= f.submit 'Confirm Edit', class: "btn btn-dark btn-submit", style: "margin-bottom:0; width:100%;padding:10px"%>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
