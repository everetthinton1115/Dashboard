<div class="container-fluid" id="login">
	<div class="row mt-2 mt-md-5">
		<div class="login-card col-12 col-md-6 offset-md-3 col-xl-4 offset-xl-4 text-center">
			<div class="row my-4">
				<div class="col d-flex">
					<%=image_tag("logo-blue.png", alt: "Commit Good", style: "width: 25%; min-width: 120px; height: auto; margin-left: 28px;")%>
				</div>
			</div>
			<div class="row text-center">
				<div class="col">
					<h3>Forgot Password</h3>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<% flash.each do |type, msg| %>
						<div class="alert alert-danger">
							<%= msg %>
						</div>
					<% end %>

					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<fieldset>
						<div class="form-group icon-group">
							<i class="fa fa-envelope"></i>
							<%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', placeholder: "Email", required: true %>
						</div>
						<%= f.hidden_field :reset_password_token %>

						<%= f.submit "Reset Password", class: "btn btn-block btn-login-sessions mt-5 mb-2" %>

						<p class="mt-3">
							<%= link_to 'Back to sign in', sign_in_path, :style => "color: #000;"%>
						</p>
					</fieldset>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
