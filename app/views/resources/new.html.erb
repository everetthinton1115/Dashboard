<div class="top-content">
  <div class="container" style="background: #a3cbdb; min-height:95vh; padding-top:90px;">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 form-box" style="padding-bottom: 50px">
        <%= form_for([@need, @resource], url: {action: "create"}, html: {id: "campaign-donation-form", class: "f1"}) do |f| %>
          <p style="color: red; margin-top:0; margin-bottom:0; font-family: 'Lato'; font-size: 50px; font-weight: 200 !important; text-align:center; text-transform: uppercase;"><%= @need.title %></p>
          <div class="f1-steps" style="margin-top:0">
            <div class="f1-progress">
                <div class="f1-progress-line" data-now-value="100" data-number-of-steps="1" style="width: 100%;"></div>
            </div>
            <div class="f1-step active" style="width:100%">
              <div class="f1-step-icon"><i class="fa fa-gift"></i></div>
            </div>
          </div>

          <p class="text-center" style="color:gray; font-size:12px; padding:0 15px;">
            Lets meet this Need! Please follow the following steps, then wait for an email from the Charity.
          </p>

          <% if current_user.present? %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :contact_email, value: current_user.email %>
          <% else %>
            <div class="form-group form-md-line-input form-md-floating-label"  style="padding-bottom: 0px; margin-bottom:15px; padding-top: 20px;">
                <div class="input-icon right">
                  <%= f.email_field :contact_email, class: "form-control" %>
                  <label for="form_control_1">Your Email</label>
                    <i class="fa fa-envelope"></i>
                </div>
            </div>
          <% end %>

          <%= f.hidden_field :category_id, value: @need.category_id %>

          <div class="form-group form-md-line-input  form-md-floating-label" style="padding-bottom: 0px; margin-bottom:0; padding-top: 20px;">
            <div class="input-icon right">
              <%= f.text_field :title, class: 'form-control' %>
              <%= f.label :title %>
                <i class="fa fa-pencil"></i>
            </div>
          </div>
          <div class="form-group form-md-line-input form-md-floating-label" style="margin-top:15px;">
              <%= f.text_area :description, class: 'form-control', rows: 3 %>
              <%= f.label :description %>
          </div>
          <div class="form-group form-md-line-input">
              <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= f.number_field :value,min: 1, class: "form-control", placeholder: "Enter Amount..", required: true%>

                  <span class="help-block">Approx. value of donation.</span>
                  <span class="input-group-addon">.00</span>
                  <label for="form_control_1" style="margin-top:-25px; color: #999; font-size:16px">Donation Value</label>
              </div>
          </div>
          <div class="row">
            <div class="form-group ">
              <div class="col-xs-12 col-md-8 col-md-offset-2" style="text-align:center">
                <h4 style="color:#999; font-size:16px;">Upload Image</h4>
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                            <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                        </div>
                        <div>
                            <span class="btn red btn-outline btn-file">
                                <span class="fileinput-new"> Select image </span>
                                <span class="fileinput-exists"> Change </span>
                                <%= f.file_field :image %>
                              </span>
                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                        </div>
                    </div>
                  </div>
            </div>
          </div>
          <%= f.submit "Contribute!", class:"btn btn-dark", style: "width:100%; margin-bottom:0"%>


        <% end %>
      </div>
    </div>
  </div>
</div>
