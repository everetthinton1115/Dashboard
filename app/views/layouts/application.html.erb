<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="Commit Good is a reward-based, charitable marketplace">
		<meta name="keywords" content="Commit Good is built upon the Creative Chatter charitable platform, which developed the first method to geolocate needed items for charities through a hyper-local approach.">
		<meta property="og:url" content="<%= request.original_url %>" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="<%= yield_meta_tag(:title, 'Commit-Good') %>" />
		<meta property="og:description" content="<%= yield_meta_tag(:description, 'Commit Good is a reward-based, charitable marketplace') %>" />
		<meta property="og:image" content="<%= yield_meta_tag(:image, request.base_url + '/assets/commit-good-logo.png') %>" />

		<meta property="og:site_name" content="<%= yield_meta_tag(:site_name, 'Commit-Good') %>">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="<%= yield_meta_tag(:site_name, 'Commit-Good') %>">
		<meta name="twitter:image" content="<%= yield_meta_tag(:image, request.base_url + '/assets/commit-good-logo.png') %>">
		<meta name="twitter:description" content="<%= yield_meta_tag(:description, 'Commit Good is a reward-based, charitable marketplace') %>"/>

		<title>Commit-Good</title>

		<!-- Site favicon -->
		<%= favicon_link_tag '/assets/favicon.ico', :rel => 'shortcut icon', title: "image/x-icon" %>

		<!-- Main Stylesheet -->
		<%= stylesheet_link_tag 'application', media: 'all' %>

		<!-- Fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500&display=swap" rel="stylesheet">
		
		<%= javascript_pack_tag 'application' %>
		
		<%= javascript_tag do %>
		window._token_contract_address = "<%= ENV['DEPLOYED_TOKEN_CONTRACT_ADDRESS'] %>";
		window._events_in_progress = 0;
	<% end %>

	<!-- Etherium and UUID Library -->
	<script src="https://cdn.jsdelivr.net/gh/ethereum/web3.js/dist/web3.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/node-uuid/1.4.8/uuid.min.js"></script>

	<!-- CSRF TAGS -->
	<%= csrf_meta_tags %>

	<!-- Bootstrap 4 -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

	<!-- Step Form Wizard -->
	<link href="https://cdn.jsdelivr.net/npm/smartwizard@5/dist/css/smart_wizard_all.min.css" rel="stylesheet" type="text/css" />
	<script src="https://cdn.jsdelivr.net/npm/smartwizard@5/dist/js/jquery.smartWizard.min.js" type="text/javascript"></script>

	<!-- Alert Library -->
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body id="body">
	<!-- Load Facebook SDK for JavaScript -->
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	var js, fjs = d.getElementsByTagName(s)[0];
	if (d.getElementById(id)) return;
	js = d.createElement(s); js.id = id;
	js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
	fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

	<div id="fullscreen-loader">
		<img src="http://cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.16.1/images/loader-large.gif" alt="processing..."/>
	</div>

	<div id="main-container" class="container-fluid">
		<div class="row navbar-container mb-3">
			<%= render 'partials/header' %>
		</div>
		<div class="row main-container">
			<div class="col">
				<%= yield %>
			</div>
		</div>
	</div>

	<%= javascript_include_tag 'application' %>

	<script>
		$(document).ready(function() { ReactRailsUJS.mountComponents(); })
	</script>
</body>
</html>
