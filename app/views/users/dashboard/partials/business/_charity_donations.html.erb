<div class="col-sm-12 chop">
  <!-- BEGIN BORDERED TABLE PORTLET-->
  <div class="portlet light portlet-fit ">
      <div class="portlet-title">
          <div class="caption">
              <span class="caption-subject sbold uppercase">Charitable Donations</span>
          </div>
      </div>
      <div class="portlet-body">
          <div class="table-scrollable table-scrollable-borderless" style="overflow: visible;">
              <table class="table table-hover table-light">
                  <thead>
                      <tr class="uppercase" >
                          <th> Date </th>
                          <th> Charity </th>
                          <th> Amount</th>

                      </tr>
                  </thead>
                  <tbody>
                    <%- unless @charitable_donations.present? %>
                      <tr class="text-center">
                        <td colspan="4" >
                          <%= @is_owner ? 'Your' : @prefix %> Members have Donated to 0 Fundraisers
                        </td>
                      </tr>
                    <% end %>
                    <%  @charitable_donations.each do |donation| %>
                      <tr>
                        <td><%= distance_of_time_in_words(Time.now, donation.created_at) %></td>
                          <td><%= donation.charity_name %></td>
                          <td><%= number_to_currency(donation.donation_amount) %></td>
                          
                      </tr>
                    <% end %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>
  <!-- END BORDERED TABLE PORTLET-->
</div>
