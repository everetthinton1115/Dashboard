<div class="gx-container">
  <div class="gx-main-container">
    <div class="gx-main-content">
      <div class="gx-wrapper">
        <div class="animated slideInUpTiny animation-duration-3">
          <div class="row">
            <div class="col-lg-12">
              <div class="gx-card">
                <div class="gx-card-header d-flex justify-content-between align-items-center">
                  <h3 class="card-heading">All Invitation Data</h3>
                  <%= link_to "Send Invite", new_invite_path, :class=>"btn btn-primary pull-right" %>
                </div>
                <div class="gx-card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                      <thead>
                        <tr>
                          <th>Receiver Email</th>
                          <th>Subject</th>
                          <th>Body</th>
                          <th>Referral Code</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @invites.each do |invite| %>
                          <tr class="gradeX">
                            <td><%= invite.receiver_email %></td>
                            <td><%= invite.subject %></td>
                            <td><%= invite.body %></td>
                            <td><%= invite.referral_code %></td>
                            <td><%= invite.status %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /footer -->
    </div>
    <!-- /main content -->
  </div>
</div>