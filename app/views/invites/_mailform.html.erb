<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Invite User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-form">
        <div id="all_stuff" class="all"></div>
        <%= form_for (@invite),:url=>invites_path() , method: :post, :html => { name: "myForm" ,:onsubmit => "return(validate());" } do |f|%>
          <div class="col-xs-12">
            <div class="form-group">
              <%= f.label :sender_email, 'Sender Email'%><span class="red-color">*</span>
              <%= f.text_field :sender_email, class: "form-control"%>
              <div id="sender_email" class="error" ></div>
            </div>
            <div class="form-group">
              <%= f.label :receiver_email, 'Receiver Email'%><span class="red-color">*</span>
              <%= f.text_field :receiver_email, class: "form-control"%>
              <div id="receiver_email" class="error" ></div>
            </div>
            <div class="form-group">
              <%= f.label :subject, 'Subject'%><span class="red-color">*</span>
              <%= f.text_field :subject , class: "form-control"%>
              <div id="subject" class="error" ></div>
            </div>
            <div class="form-group">
              <%= f.label :body, 'Message'%><span class="red-color">*</span>
              <%= f.text_area :body , class: "form-control"%>
              <div id="body" class="error" ></div>
            </div>
          </div>
          <div class="col-md-12 text-center btn-bx">
            <%= f.submit 'Send Invitation', class: "btn btn-primary" %>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          </div>
          <div class="clearfix"></div>
        <%end%>
      </div>
  </div>
</div>
